{
  "name": "audiorec-vite-svelte",
  "private": true,
  "version": "1.0.0",
  "author": "cakeruu",
  "main": "dist-electron/main.js",
  "description": "A simple dekstop audio recorder app",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "tsc && vite build && electron-builder --win",
